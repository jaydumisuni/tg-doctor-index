{
  "version": "2.1",
  "os": "linux",
  "items": [
    {
      "id": "checkm8-pack",
      "title": "TechGuy Checkm8 Pack",
      "release": {
        "direct": "https://github.com/jaydumisuni/TechGuyCheckm8/releases/latest/download/TechGuyCheckm8.zip"
      },
      "install": { "type": "unzip", "dest": "{cache_root}/" },
      "check": {
        "type": "exec_ok",
        "path": "{cache_root}/TechGuyCheckm8/tools/linux/irecovery",
        "args": ["-V"]
      }
    },
    {
      "id": "python3-runtime-linux",
      "title": "Python3 runtime (linux)",
      "check": {
        "type": "exec_ok",
        "path": "python3",
        "args": ["--version"]
      },
      "notes": "Python3 not found. Install with: sudo apt install -y python3"
    },
    {
      "id": "ipwndfu-linux",
      "title": "ipwndfu (linux)",
      "release": {
        "direct": "https://github.com/jaydumisuni/ipwndfu/archive/refs/heads/master.zip"
      },
      "install": { "type": "unzip", "dest": "{cache_root}/TechGuyCheckm8/tools/linux/" },
      "check": {
        "type": "exec_ok",
        "path": "python3",
        "args": ["{cache_root}/TechGuyCheckm8/tools/linux/ipwndfu-master/ipwndfu", "-h"]
      }
    },
    {
      "id": "arduino-cli-linux",
      "title": "Arduino CLI (linux)",
      "check": {
        "type": "exec_ok",
        "path": "arduino-cli",
        "args": ["version"]
      },
      "notes": "If this fails (Debian/Ubuntu): sudo apt install -y arduino-cli  â€¢ or use official tarball from Arduino."
    },
    {
      "id": "arduino-helper-present-linux",
      "title": "Arduino status helper present (linux)",
      "check": {
        "type": "file_exists",
        "path": "{cache_root}/TechGuyCheckm8/tools/linux/arduino_status.py"
      },
      "notes": "Helper script used by the GUI to detect Arduino ports and connection state."
    }
  ]
}
